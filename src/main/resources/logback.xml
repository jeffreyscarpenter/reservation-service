<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
       		<pattern>%d{HH:mm:ss.SSS} %magenta(%-5level) %cyan(%-45logger) : %msg%n</pattern>
        </encoder>
    </appender>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="com.datastax.oss.driver" level="ERROR"/>
    <logger name="com.cassandraguide.reservation" level="INFO"/>
    <logger name="com.cassandraguide.reservation.ReservationServiceApp" level="WARN" />
</configuration>
